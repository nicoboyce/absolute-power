# Deployment configuration
# Copy this file to ~/.bashrc or create a separate .env file (DO NOT COMMIT .env)

export DEPLOY_HOST="your-domain.com"
export DEPLOY_USER="your-ssh-username"
export DEPLOY_PATH="/path/to/web/directory/"
export DEPLOY_SSH_KEY="/home/pi/.ssh/id_rsa"  # Optional, defaults to ~/.ssh/id_rsa